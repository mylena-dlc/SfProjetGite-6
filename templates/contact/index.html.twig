{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block meta_description %} {{ description }} {% endblock %}

{% block body %}


 <div class="title gite-title center">
        <h1>Contactez-nous</h1>
</div>
   
<div class="breadcrumb">
    <a href="{{ path('app_home') }}"><button class="btn">Retour</button></a>
</div>

<section class="section-contact">
    <div class="icon">
        <p class="banner-p">facebook</p>
        <p class="banner-icon"><a href="https://www.facebook.com/profile.php?id=61555292307736" class="footerLink" target="_blank"><i class="fa-brands fa-facebook"></i></a></p>
        <p>Gîte du Rain du Pair</p>
    </div>
    <div class="icon">
        <p class="banner-p">instagram</p>
        <p class="banner-icon"><a href="https://www.facebook.com/profile.php?id=61555292307736" class="footerLink" target="_blank"><i class="fa-brands fa-instagram"></i></a></p>
        <p>@giteraindupair</p>
        </div>
    <div class="icon">
        <p class="banner-p">téléphone</p>
        <p class="banner-icon"><i class="fa-solid fa-phone"></i></p>
        <p>06 36 26 62 22</p>
    </div>
    <div class="icon">
        <p class="banner-p">Mail</p>
        <p class="banner-icon"><i class="fa-solid fa-envelope"></i></p>
        <p><a href="mailto:contact@giteraindupair.fr">contact@giteraindupair.fr</a></p>
    </div>

</section>

   <div class="registerForm">

<h2 class="title-contact">Un renseignement?<br> Une demande particulière?<br> N'hésitez pas, envoyez-nous un message !</h2>    
    <form id="reservationForm" class="contactForm" action="{{ path('app_contact_email') }}" method="post">


        <label for="email">Votre adresse mail</label>
        <input type="email" id="contact-email" name="email" required placeholder="Sélectionnez votre adresse mail">

        <label for="subject">Sujet</label>
        <input type="text" id="contact-subject" name="subject" required placeholder="Object de votre demande">

        <label for="message">Votre message</label>
        <textarea id="contact-message" name="message" placeholder="Quel est votre demande ?" required></textarea>
        

        <div class="submit-containt">
            <input type="submit" class="btn" value="Envoyé">
        </div>

    </form>
    </div>


{% endblock %}
