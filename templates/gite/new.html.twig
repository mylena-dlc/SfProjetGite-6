{% extends 'base.html.twig' %}

{% block title %}Ajouter un gîte{% endblock %}

{% block body %}

    <div class="title gite-title center">
          <h1>Ajouter un gîte</h1>
    </div>

<div class="registerForm giteForm">


    {{ form_start(form) }}

         <div class="row-center">
            {{ form_row(form.name) }} 


            {{ form_row(form.address) }} 
         </div>

            <div class="row-add">
               {{ form_row(form.cp) }} 
               {{ form_row(form.city) }} 
         </div>
         <div class="row-add">
            
               {{ form_row(form.capacity) }} 
               {{ form_row(form.price) }} 
               {{ form_row(form.cleaningCharge) }} 
            </div>

{{ form_row(form.description) }}  




    {{ form_end(form) }}

    </div>
{% endblock %}