{% extends 'base.html.twig' %}

{% block title %}Galerie images{% endblock %}

{% block meta_description %} {{ description }} {% endblock %}


{% block body %}

{% for flash_message in app.flashes("error") %}
    <script>
        Swal.fire({
            icon: "error",
            title: "Erreur",
            text: "{{ flash_message|raw }}",
        });
    </script>
{% endfor %}
{% for flash_message in app.flashes("success") %}
    <script>
        Swal.fire({
            icon: "success",
            title: "Succès",
            text: "{{ flash_message|raw }}",
        });
    </script>
{% endfor %}

<div class="title gite-title center">
        <h1>Catégorie d'image</h1>
</div>


<div class="cards">
{% for category in categories %}

<div class="card">
    <a class="cardLink" href="{{ path('show_category', {'id': category.id}) }}">
    {{ category }}
    </a>
<div class="cardBtns">
    <button class="btn edit cardBtn"><a href="{{ path ('edit_category', {'id': category.id}) }}" class="cardLink"><i class="fa-solid fa-pen-to-square"></i></a></button>
    <button class="btn delete cardBtn"><a href="{{ path ('delete_category', {'id': category.id}) }}" class="cardLink"><i class="fa-solid fa-trash-can"></i></a></button>

</div>
    </div>    

{% endfor %}
</div>
<div class="btnRight">
    <button class="btn add categoryBtnAdd"><a href="{{ path ('new_category') }}">Ajouter une catégorie</a></button>
    <button class="btn add categoryBtnAdd"><a href="{{ path ('new_picture') }}">Ajouter une image</a></button>

</div>

{% endblock %}
